{
  "version": "0.0.0",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/**/*"
    ],
    "nohoist": []
  },
  "scripts": {
    "setup": "yarn wsrun --exclude-missing --stages setup",
    "start": "yarn wsrun --exclude-missing start",
    "reset": "yarn wsrun --exclude-missing --stages reset",
    "postinstall": "patch-package",
    "format": "prettier --write . ; eslint . --ext ts --ext tsx --ext js --fix",
    "test": "tsc --pretty ; eslint . --ext ts --ext tsx --ext js",
    "test:watch": "yarn wsrun --exclude-missing test:watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "./**/*.@(js|ts|tsx)": [
      "yarn test"
    ]
  },
  "dependencies": {
    "tailwindcss": "^2.0.3"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@testing-library/jest-dom": "^5.11.8",
    "@testing-library/react": "^11.2.3",
    "@testing-library/react-hooks": "^3.7.0",
    "@ts-strict/eslint-config": "^1.0.0",
    "@types/jest": "^26.0.20",
    "@types/node": "^13.9.5",
    "@types/react": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^4.13.0",
    "@typescript-eslint/parser": "^4.14.0",
    "autoprefixer": "^10.2.4",
    "babel-jest": "26.6.0",
    "babel-plugin-relay": "^10.1.3",
    "eslint": "^7.17.0",
    "eslint-config-airbnb-typescript": "^12.0.0",
    "eslint-config-canonical": "^25.9.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "graphql": "^15.0.0",
    "husky": "^4.3.7",
    "jest": "26.6.0",
    "jest-watch-typeahead": "^0.5.0",
    "lint-staged": "^10.0.10",
    "lodash": "^4.17.20",
    "patch-package": "^6.2.2",
    "postcss": "^8.2.6",
    "postinstall-postinstall": "^2.1.0",
    "prettier": "^2.2.1",
    "react": "~16.13.1",
    "react-dom": "~16.13.0",
    "react-test-renderer": "~16.13.1",
    "typescript": "^4.1.3",
    "wsrun": "^5.2.4"
  }
}
